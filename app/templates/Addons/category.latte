{block content}
<h1 n:block="title">{$categoryName}{*_"Addons from %s", $categoryName*}{if $page && $pageCount > 1} ({_"page"} {$page}/{$pageCount}){/if}</h1>

<p class="info" style="margin: -10px 0 15px 0">{_"There is %d addons in this category.", $itemCount}</p>
<hr>

<div class="news" n:foreach="$addons as $item">
	<h2><a n:href="detail, $item->id">{$item->name} {$item->version}</a></h2>
	<p class="date">{_"Added"} {$item->added|date,'j.n.Y'}{if $item->updated} ({_"updated"} {$item->updated|date,'j.n.Y'}){/if} | <strong>{$item->ref("old_authors", "author_id")->name}</strong> | {$item->downloads}&times;</p>

	<a n:href="detail, $item->id" style="display: inline-block; max-height: 150px; overflow: hidden; float: left; width: 180px; margin: 0 10px 15px 0">
		{var $imageUrl = $item->screenshot ? $item->screenshot : "/images/placeholder.png"}
		<img src="{$imageUrl}" style="width: 180px" alt="">
	</a>

	{var $text = htmlspecialchars_decode($item->description)}
	<p style="padding-left: 200px;">{!$text|striptags|truncate, 300}</p>

	<p style="float: right">
		<a href="http://addons.miranda-im.org/download.php?dlfile={$item->id}" style="font-weight: bold; font-size: 15px">{_"Download"}</a>
		|
		<a n:href="detail, $item->id">{_"Continue reading"} &raquo;</a>
	</p>
</div>

<p n:if="!$addons->count()" class="italic">{_"There are no addons."}</p>

{control vp}